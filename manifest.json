{
    "manifest_version": 3,
    "name": "YouTube Music Player",
    "version": "0.0.1",
    "description": "Play YouTube videos as a music player",
    "permissions": [
      "activeTab",
      "storage",
      "tabs",
      "scripting"
    ],
    "host_permissions": [
      "https://www.youtube.com/*"
  ],
  
    "action": {
      "default_title": "YouTube Music Player",
      "default_popup": "popup.html"
    }
  }
  